{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mastery Desktop",
  "version": "0.1.0",
  "identifier": "com.mastery.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Mastery Desktop",
        "width": 600,
        "height": 500,
        "resizable": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
