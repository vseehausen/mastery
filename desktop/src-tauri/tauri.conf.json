{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mastery",
  "version": "0.1.0",
  "identifier": "com.mastery.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bash src-tauri/scripts/bundle-dylibs.sh && pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Mastery",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "11.0",
      "frameworks": [
        "libs/libmtp.9.dylib",
        "libs/libusb-1.0.0.dylib"
      ]
    }
  }
}
